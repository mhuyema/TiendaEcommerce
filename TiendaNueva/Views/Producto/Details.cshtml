@model TiendaNueva.Models.Producto

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles: </h1>

<div>
    <h4>@Model.Nombre</h4>
    <hr />

    <div class="row">

        <div class="col-md-8 card">
            <dl class="row">
                <div class="card card-body">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Descripcion)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.PrecioUnitario)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.PrecioUnitario)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Categoria)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Categoria.CategoriaName)
                    </dd>
                </div>
            </dl>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.ProductoID" class="btn btn-primary">Edit</a> |
                <a  asp-action="NuestraTienda" class="btn btn-link">Back to List</a>
            </div>
        </div>

        <div class="col-md-4 text-center">
            @if (!string.IsNullOrEmpty(Model.URLImage))
            {
                <img src="@Url.Content(Model.URLImage)"
                     alt="@Model.Nombre"
                     class="img-fluid rounded border shadow-sm"
                     style="max-height: 350px; object-fit: contain;">
            }
            else
            {
                <div class="p-5 border bg-light text-muted">Sin imagen</div>
            }
        </div>
    </div>
</div>