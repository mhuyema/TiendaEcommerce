@model IEnumerable<TiendaNueva.Models.CarritoItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioFinalPorProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carrito)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioFinalPorProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Carrito.CarritoID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CarritoItemID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CarritoItemID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CarritoItemID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
